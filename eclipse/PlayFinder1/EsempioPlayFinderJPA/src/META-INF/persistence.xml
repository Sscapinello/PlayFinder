<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="PlayFinderJPA" transaction-type="RESOURCE_LOCAL">
		<class>it.playfinder.model.Campo</class>
		<class>it.playfinder.model.Evento</class>
		<class>it.playfinder.model.Sport</class>
		<class>it.playfinder.model.Squadra</class>
		<class>it.playfinder.model.User</class>
		<class>it.playfinder.model.Ruolo</class>
		<class>it.playfinder.model.Modulo</class>
		<class>it.playfinder.model.GiocatoriRuolo</class>
		<class>it.playfinder.model.RuoloPartita</class>
		<class>it.playfinder.model.Amicizia</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/playfinder"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
			<property name="javax.persistence.schema-generation.database.action" value="create"/>
		</properties>
	</persistence-unit>
</persistence>
